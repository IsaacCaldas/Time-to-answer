<h1><%= action_msg %> <%= @admin.model_name.human %></h1> <br/>

<% if @admin.errors.any? %>
  <button type="button" class="close" data-dismiss="alert"
aria-hidden="true">Ã—</button>
  <div class="alert alert-danger">    
    <ul>
    <% @admin.errors.full_messages.each do |msg| %>
      <li><%= msg %> </li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control', placeholder:"john@doe.com" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class:'form-control', placeholder:"123abc" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:'form-control', placeholder:"123abc" %>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>