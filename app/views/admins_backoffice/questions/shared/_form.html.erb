<h1><%= action_msg %> - Question </h1> <br/>
<%= t('message.listing', model: @subjects.model_name.human(count: 2)) %>
<% if @question.errors.any? %>
  <button type="button" class="close" data-dismiss="alert"
aria-hidden="true">Ã—</button>
  <div class="alert alert-danger">    
    <ul>
    <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %> </li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :subject %>
    <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, { class:"form-control"}) %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:'form-control', placeholder:"Question", rows:5 %>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>