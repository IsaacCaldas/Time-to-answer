<h1><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
<table class="table table-striped table-bordered table-hover">
<thead>
      <tr>
          <th>#</th>
          <th><%= translate_field(@questions, :description) %></th>
          <th><%= translate_field(@questions, :subject) %></th>
          <th style="display:flex; justify-content:center">            
            <%= link_to new_admins_backoffice_question_path, class:'btn btn-success btn-circle' do %>  
              <i class="fa fa-plus"></i>
            <% end %>
          </th>
      </tr>
  </thead>
  <tbody>
    <% @questions.each do |question|  %>
      <tr>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(100) %></td>
          <td><%= question.subject.description.truncate(50) %></td>
          <td style='width: 85px'>
            <%= link_to edit_admins_backoffice_question_path(question), class:'btn btn-primary btn-circle' do %>  
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_question_path(question), method: :delete, class:'btn btn-danger btn-circle', data: { confirm: t('message.confirm_with', item: question.description.truncate(20)) } do %>  
              <i class="fa fa-trash"></i>
            <% end %>       
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='text-center'><%= paginate @questions %></div>
